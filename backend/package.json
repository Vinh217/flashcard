{
  "name": "flashcard-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "node -r dotenv/config --loader ts-node/esm ./node_modules/typeorm/cli.js migration:generate src/migrations/migrations -d src/config/database.ts",
    "migration:run": "node -r dotenv/config --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run -d src/config/database.ts",
    "migration:revert": "node -r dotenv/config --loader ts-node/esm ./node_modules/typeorm/cli.js migration:revert -d src/config/database.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "openai": "^4.97.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.2",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
